   <div class="user info">
    <br>
      <h3>User info</h3>
      <%= image_tag user.get_profile_image(100,100) %>
      <table class="table table-striped">
       <thead>
        <th>name</th>
        <th><%= user.name %></th>
       </thead>

       <tbody>
        <td>introduction</td>
        <td><%= user.introduction %></td>
       </tbody>
      </table>

      <%= link_to edit_user_path(user.id), class: 'btn btn-outline-primary btn-block' do %>
      <i class="fas fa-user-cog"></i>

      <% end %>

     </div>


   <div class="new book"><br>
    <h2>New book</h2>
    <%= form_with model: book do |f| %>
    <h6>Title</h6>
    <%= f.text_field :title %>
    <h6>Opinion</h6>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Create Book' %>
   <% end %>
   </div>


