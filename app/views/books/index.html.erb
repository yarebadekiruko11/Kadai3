  <h3>Books</h3>
<table class="table table-striped">
 <thead>
  <th>User</th>
  <th>Title</th>
  <th>Opinion</th>
 </thead>

 <tbody>
  <% @books.each do |book| %>
   <tr>
  <td><%= image_tag user.get_profile_image(100,100) %></td>
  <td><%= link_to book.title, book_path(book.id) %></td>
  <td><%= book.body %></td>
   </tr>
  <% end %>

  </tbody>

</table>

